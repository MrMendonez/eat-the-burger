<div class="container-fluid">
  <div>
    <h1>Eat The Burger!</h1>
    <img class="img-responsive" src="/static/img/hungry.jpg" width="300px">
  </div>
  <div class=row-fluid>
    <div class=col-md-12>
      <h3>Welcome to Good Burger, home of the Good Burger, can I take your order?</h3>
      <form action="/create" method="POST">
        <input placeholder="Enter Burger Name" name="burger_name"></input><br>
        <button type="submit" class="btn btn-primary">Submit Burger Order</button>
      </form>
    </div>
  </div>
  <div class= "row-fluid">
    <div class="col-md-6">
      Not Devoured
      {{#each burger_data}}
        {{#unless this.devoured}}
        <div> 
          <img class="img-responsive" src="/static/img/hamburger.png" width="300px">     
          <div>
            <div>{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        <div>
          <form method="POST" action="/update?_method=POST">
            <input type="hidden" type="text" name="id" value={{this.id}}>
            <button type="submit" class="btn btn-default">Devour!</button>
          </form>
        </div>
        {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-6">
      Devoured
      {{#each burger_data}}
        {{#if this.devoured}}
        <div>
          <img class="img-responsive" src="/static/img/eaten-burger.jpg" width="300px">     
          <div>
            <div class="burger">{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>